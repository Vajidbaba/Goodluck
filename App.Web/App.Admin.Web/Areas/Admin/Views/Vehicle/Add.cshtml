@{
    ViewData["Title"] = "Add Orders";
}

<div class="row ">
    <div class="col-md-6">
        <h6 class="font-weight-bolder va-title v-color">Add Orders</h6>
    </div>
    <div class="col-md-6 text-end">
        <a href="~/Admin/orders/add" class="btn btn-sm v-bg-color text-white">
            Save
        </a>
    </div>
</div>
<div class="card m-0 ">
    <div class="card-body px-3 py-2">
        <div class="row">
            <div class="col-4">
                <p class="text-xs font-weight-bold ">Vehicle Details</p>
                <div class="row">
                    <div class="col-12">
                        <label class="mb-0">Vehicle Name</label>
                        <div class="mb-2">
                            <input type="text" class="form-control form-control-sm" placeholder="Type here">
                        </div>
                        <label class="mb-0">Vehicle Number</label>
                        <div class="mb-2">
                            <input type="text" class="form-control form-control-sm" placeholder="Type here">
                        </div>
                        <label class="mb-0">Vehicle Model</label>
                        <div class="mb-2">
                            <input type="text" class="form-control form-control-sm" placeholder="Type here">
                        </div>
                        <label class="mb-0">Purches Date</label>
                        <div class="mb-2">
                            <input type="date" class="form-control form-control-sm" placeholder="Type here">
                        </div>
                        <label class="mb-0">Image</label>
                        <div class="mb-2">
                            <input type="file" class="form-control form-control-sm" placeholder="Type here">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-8">
                <img src="https://light-trucks.tatamotors.com/images/tata-light-trucks/tata-ultra/t16-overview.png" />
            </div>
        </div>
    </div>
</div>
